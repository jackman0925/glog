# zap logger configuration

# encoder: console or json
encoder: console
# path: log file path
path: ./logs/
# directory: log file directory
directory: glog
# show_line: show file and line number
show_line: true
# show_goroutine: show goroutine ID
show_goroutine: true
# encode_level: Lowercase, LowercaseColor, Capital, CapitalColor
encode_level: CapitalColor
# stacktrace_key: stacktrace key
stacktrace_key: stacktrace
# log_stdout: log to stdout
log_stdout: true
# high_performance: enable high performance mode (reduces features for better performance)
high_performance: false
# separate_levels: separate log levels to different files (set to false for better performance)
separate_levels: true
# log_level: minimum log level to output (debug, info, warn, error, panic, fatal)
log_level: debug

# segment: log rotation
segment:
  # max_size: max size of log file before rotation (MB)
  max_size: 10
  # max_age: max age of log file before rotation (days)
  max_age: 7
  # max_backups: max number of backups
  max_backups: 500
  # compress: compress rotated log files
  compress: true
